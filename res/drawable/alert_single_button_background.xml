<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Alert一个按钮时按钮背景 -->

    <item android:state_pressed="false"><shape>
            <corners android:bottomLeftRadius="@dimen/normal_radius" android:bottomRightRadius="@dimen/normal_radius" />

            <solid android:color="@color/loding_alert_background" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <corners android:bottomLeftRadius="@dimen/normal_radius" android:bottomRightRadius="@dimen/normal_radius" />

            <solid android:color="@color/gray_button_down_background" />
        </shape></item>

</selector>